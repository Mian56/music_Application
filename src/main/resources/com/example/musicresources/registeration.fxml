<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="330" style="-fx-background-color: #f4f4f4;" fx:controller="login.registerationController">
    <Label layoutX="150" layoutY="20" text="Register" style="-fx-font-size: 24; -fx-text-fill: #333;"/>

    <Label layoutX="50" layoutY="60" text="First Name:"/>
    <TextField fx:id="firstNameField" layoutX="150" layoutY="55" promptText="Enter your first name" />

    <Label layoutX="50" layoutY="100" text="Last Name:"/>
    <TextField fx:id="lastNameField" layoutX="150" layoutY="95" promptText="Enter your last name" />

    <Label layoutX="50" layoutY="140" text="Email:"/>
    <TextField fx:id="emailField" layoutX="150" layoutY="135" promptText="Enter your email" />

    <Label layoutX="50" layoutY="180" text="Password:"/>
    <PasswordField fx:id="passwordField" layoutX="150" layoutY="175" promptText="Enter your password" />

    <Label layoutX="50" layoutY="220" text="Confirm Password:"/>
    <PasswordField fx:id="confirmPasswordField" layoutX="150" layoutY="215" promptText="Confirm your password" />

    <Button fx:id="registerButton" text="Register" layoutX="150" layoutY="260" onAction="#handleRegister" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>

    <Text fx:id="statusMessage" layoutX="50" layoutY="290" style="-fx-fill: red;" />
</AnchorPane>
