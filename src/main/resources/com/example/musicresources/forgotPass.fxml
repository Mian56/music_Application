<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.forgotPassController">

    <children>
        <!-- Title -->
        <Label layoutX="200" layoutY="30" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #444;" text="Forgot Password" />

        <!-- Instructions -->
        <Label layoutX="120" layoutY="80" style="-fx-font-size: 14; -fx-text-fill: #666;" text="Please enter your details to reset your password:" />

        <!-- Username/Email Field -->
        <Label layoutX="133.0" layoutY="129.0" style="-fx-font-size: 12; -fx-text-fill: #444;" text="Email:" />
        <TextField fx:id="emailField" layoutX="250" layoutY="125" prefWidth="250" promptText="Enter your email" />

        <!-- New Password Field -->
        <Label layoutX="100" layoutY="180" style="-fx-font-size: 12; -fx-text-fill: #444;" text="New Password:" />
        <PasswordField fx:id="newPasswordField" layoutX="250" layoutY="175" prefWidth="250" promptText="Enter new password" />

        <!-- Confirm Password Field -->
        <Label layoutX="100" layoutY="230" style="-fx-font-size: 12; -fx-text-fill: #444;" text="Confirm Password:" />
        <PasswordField fx:id="confirmPasswordField" layoutX="250" layoutY="225" prefWidth="250" promptText="Confirm new password" />

        <!-- Submit Button -->
        <Button fx:id="resetButton" layoutX="250" layoutY="280" onAction="#handleResetPasswordAction" prefWidth="150" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14;" text="Reset Password" />

        <!-- Cancel Button -->
        <Button fx:id="cancelButton" layoutX="420" layoutY="280" onAction="#handleCancelAction" prefWidth="80" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14;" text="Cancel" />
      <Label fx:id="statusLabel" layoutX="124.0" layoutY="331.0" style="-fx-font-size: 12; -fx-text-fill: #444;" text="Status" />

    </children>
</AnchorPane>
