<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="model.Settings" prefWidth="600.0" prefHeight="400.0">

    <VBox layoutX="20" layoutY="20" spacing="15" prefWidth="560">

        <HBox spacing="10">
            <Label text="Enable Dark Mode:" />
            <CheckBox fx:id="darkModeCheckBox" />
        </HBox>

        <Label text="Account Settings:" style="-fx-font-weight: bold;" />
        <HBox spacing="10">
            <Label text="Username: johndoe123" />
            <Button fx:id="changePasswordButton" text="Change Password" />
        </HBox>

        <Label text="Notifications:" style="-fx-font-weight: bold;" />
        <CheckBox fx:id="notificationsCheckBox" text="Enable Notifications" />

        <HBox spacing="10" alignment="CENTER_RIGHT" prefWidth="560">
            <Button fx:id="saveSettingsButton" text="Save" />
            <Button fx:id="cancelSettingsButton" text="Cancel" />
        </HBox>

    </VBox>

</AnchorPane>
