<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="562.0" style="-fx-background-color: #fdf6e3;;" styleClass="anchor-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="model.Playlist">
    <stylesheets>
        <URL value="@/com/example/musicresources/playlist-style.css" />
    </stylesheets>

    <Label fx:id="playlistNameLabel" layoutX="20" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Playlist: Default Name" />

    <ImageView fx:id="albumArt" fitHeight="100" fitWidth="100" layoutX="20" layoutY="60" />

    <ListView fx:id="songListView" layoutX="150" layoutY="60" prefHeight="280" prefWidth="400" />


    <Label fx:id="nowPlayingLabel" layoutX="150" layoutY="350" text="Now Playing: None" />

    <HBox layoutX="20" layoutY="350" spacing="10">
        <Button fx:id="addSongButton" style="-fx-background-color: #3498db;;" text="Add Song" textFill="WHITE">
         <font>
            <Font size="17.0" />
         </font></Button>
        <Button fx:id="removeSongButton" style="-fx-background-color: #3498db;;" text="Remove Song" textFill="WHITE">
         <font>
            <Font size="17.0" />
         </font></Button>
        <Button fx:id="clearPlaylistButton" style="-fx-background-color: #3498db;;" text="Clear Playlist" textFill="WHITE">
         <font>
            <Font size="17.0" />
         </font></Button>
    </HBox>

</AnchorPane>
