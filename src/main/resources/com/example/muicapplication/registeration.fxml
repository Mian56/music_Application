<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="300" style="-fx-background-color: #f4f4f4;" fx:controller="com.example.muicapplication.registerationController">
    <Label layoutX="150" layoutY="20" text="Register" style="-fx-font-size: 24; -fx-text-fill: #333;"/>

    <Label layoutX="50" layoutY="70" text="Username:"/>
    <TextField fx:id="usernameField" layoutX="150" layoutY="65" promptText="Enter your username" />

    <Label layoutX="50" layoutY="110" text="Email:"/>
    <TextField fx:id="emailField" layoutX="150" layoutY="105" promptText="Enter your email" />

    <Label layoutX="50" layoutY="150" text="Password:"/>
    <PasswordField fx:id="passwordField" layoutX="150" layoutY="145" promptText="Enter your password" />

    <Label layoutX="50" layoutY="190" text="Confirm Password:"/>
    <PasswordField fx:id="confirmPasswordField" layoutX="150" layoutY="185" promptText="Confirm your password" />

    <Button fx:id="registerButton" text="Register" layoutX="150" layoutY="230" onAction="#handleRegister" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>

    <Text fx:id="statusMessage" layoutX="50" layoutY="260" style="-fx-fill: red;" />
</AnchorPane>
